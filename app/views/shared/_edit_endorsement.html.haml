#edit-endorsement-form-container.hide
  %a.close x
  = simple_form_for :endorsement, url: '/edit_endorsement/', html: {id: 'edit-endorsement-form' }, remote: true do |f|
    %label Email and Password are Required to Edit
    = text_field_tag 'email', nil, placeholder: 'Email'
    = password_field_tag 'password', nil, placeholder: 'Password'
    %label Which candidate are you voting for?
    = f.input :candidate_id, collection: Candidate.all, label: false
    %br
    %label Why do you support her or him?
    = f.input :description, as: :text, label: false, input_html: { class: 'edit-endorsement-textarea' }
    = f.input :ip_address, as: :hidden, input_html: { value: "#{@client_ip}" }
    = f.submit 'Edit Endorsement', class: 'btn btn-primary'
